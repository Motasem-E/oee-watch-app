<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/box_inset_layout_padding"
    tools:context=".view.MainActivity"
    tools:deviceIds="wear"
    android:keepScreenOn="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="80dp"
            android:layout_height="25dp"            android:src="@drawable/logo"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="12dp"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_boxedEdges="all"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_machine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Carregando MÃ¡quinas da Celula..."
            android:layout_marginBottom="1dp"
            android:lines="2"
            android:minLines="2"
            android:singleLine="false"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="#000"
                    android:text="OEE"
                    android:background="@drawable/rounded_corner"
                    android:textAlignment="center"
                    android:layout_marginBottom="5dp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="#000"
                    android:text="Produzidas"
                    android:background="@drawable/rounded_corner"
                    android:textAlignment="center"
                    android:layout_marginBottom="5dp"
                    android:textStyle="bold"
                   />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="#000"
                    android:text="Refugo"
                    android:background="@drawable/rounded_corner"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_oee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="#fff"
                    android:text="..%"
                    android:textAlignment="center"
                    android:layout_marginBottom="5dp"
                    android:textStyle="bold"
                    android:paddingVertical="4dp"
                    />

                <TextView
                    android:id="@+id/tv_good_production"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="#fff"
                    android:text=".."
                    android:textAlignment="center"
                    android:layout_marginBottom="5dp"
                    android:textStyle="bold"
                    android:paddingVertical="4dp"
                    />

                <TextView
                    android:id="@+id/tv_bad_production"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="#fff"
                    android:text=".."
                    android:textAlignment="center"
                    android:layout_marginBottom="5dp"
                    android:textStyle="bold"
                    android:paddingVertical="4dp"
                    />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/bt_next"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:background="#00000000"/>

        <Button
            android:id="@+id/bt_refresh"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="#00000000"/>

        <Button
            android:id="@+id/bt_previous"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:background="#00000000"/>

    </RelativeLayout>

</androidx.wear.widget.BoxInsetLayout>